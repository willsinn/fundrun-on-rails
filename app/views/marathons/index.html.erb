    <div class="container">
      <div class="row">

          <%@marathons.each do |marathon|%>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <div class="card-img-wrapper">
                <img src="<%= marathon.img_link %>" alt="">
              </div>
              <div class="mara-card-info">
                <span class="card-name">
                  <%=link_to marathon.name, marathon%>
                </span>
                <span><%= marathon.date %></span>
              </div>
            </div>
          </div>
          <%end%>


      </div>
    </div>
