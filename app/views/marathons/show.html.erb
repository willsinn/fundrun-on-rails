    <div class="row">
        <div class="mara_info">
          <img src="<%= @marathon.img_link %>" alt="">
          <ul>
            <li>
              <span style="font-weight:bold">DATE:</span> <%= @marathon.date %>
            </li>
            <li>
              <span style="font-weight:bold">TYPE:</span> <%= @marathon.m_type %>
            </li>
            <li>
              <p class="detail">DETAILS</p>
              <%= @marathon.description %>
            </li>
          </ul>
        </div>

    </div>
    <%= render "participations/button" %>
  </div>

