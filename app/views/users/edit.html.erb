<h1>edit <%=@user.name%>'s profile</h1>
<%= form_for @user do |f|%>
  <%= f.label 'enter name'%>
  <%= f.text_field 'name'%>
<br>
  <%= f.label 'enter age'%>
  <%= f.number_field 'age'%>
<br>
  <%= f.label 'change password'%>
  <%= f.text_field 'password'%>
<br>
  <%= f.submit 'save changes'%>
<%end%>
<%= button_to 'delete user', @user, method: :delete%>
